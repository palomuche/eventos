    <div class="grid-principal">
        <div class="menu-lateral">
            <div class="sidebar">
                <div>
                    <div style="cursor:pointer;padding-left:0.3rem" id="btn">
                        <img style="height:3rem" src="~/img/LOGO_TOP.png" />
                    </div>
                    <a href="@(Url.Action("Index", "Home"))">
                        <div class="lista-menu-lateral @((string)ViewBag.Title == "Home" ? Html.Raw("title-ativo") : Html.Raw(""))">
                            <img style="height:3rem;opacity:0.6" src="~/img/ICON_DASH.svg" />
                            <div>Dashboard</div>
                        </div>
                    </a>
                    <a href="@(Url.Action("Index", "Animal"))">
                        <div class="lista-menu-lateral @((string)ViewBag.Title == "Pets" ? Html.Raw("title-ativo") : Html.Raw(""))">
                            <img style="height:3rem" src="~/img/ICON_PET_PATA.svg" />
                            <div>Pets</div>
                        </div>
                    </a>
                    <div class="lista-menu-lateral @((string)ViewBag.Title == "Doações" ? Html.Raw("title-ativo") : Html.Raw(""))">
                        <img style="height:3rem" src="~/img/ICON_OSSO.svg" />
                        <div>Doações</div>
                    </div>
                    <a href="@(Url.Action("Index", "Adocao"))">
                        <div class="lista-menu-lateral @((string)ViewBag.Title == "Adoções" ? Html.Raw("title-ativo") : Html.Raw(""))">
                            <img style="height:3rem" src="~/img/adocao_icon.svg" />
                            <div>Adoções</div>
                        </div>
                    </a>
                    <div class="lista-menu-lateral @((string)ViewBag.Title == "Configurações" ? Html.Raw("title-ativo") : Html.Raw(""))">
                        <img style="height:3rem" src="~/img/ICON_CONFIG.svg" />
                        <div>Configurações</div>
                    </div>
                </div>
                <div>
                    <div class="lista-menu-lateral">
                        <img style="height:3rem" src="~/img/FOTO_LIVIA.png" />
                        <div style="font-size: 15px; color: #FB9066">
                            <p><b>Lívia Maria</b><button class="btn-danger" style="border-radius: 15px; margin-left:1rem" type="submit" onclick="sairSistema()">Sair</button></p>
                            <p>Patinhas para adoção</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="conteudo">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script>
        btn.onclick = function () {
            let sidebar = document.querySelector(".sidebar");
            sidebar.classList.toggle("active");

            $(".grid-principal").toggleClass("toggle-menu")
        }

        function sairSistema() {
            window.location.href = '@(Url.Action("Sair", "Autenticacao"))';
        }

    </script>
