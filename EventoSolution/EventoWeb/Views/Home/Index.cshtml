@{
    ViewData["Title"] = "Calendário";
    var eventos = (IEnumerable<Evento>)ViewBag.Eventos;
    var anoAtual = DateTime.Now.Year;
    var mesAtual = DateTime.Now.Month;
    var diasDoMes = DateTime.DaysInMonth(anoAtual, mesAtual);
    var primeiroDia = new DateTime(anoAtual, mesAtual, 1);
    var diaDaSemana = (int)primeiroDia.DayOfWeek;
    var ultimoDia = primeiroDia.AddDays(diasDoMes - 1);
}

<style>

    .body-calendar {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        background-color: #f4f4f4;
    }

    .calendar {
        /* max-width: 800px; */
        background: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .month {
        text-align: center;
        padding: 20px 0;
        background-color: #fd9a47;
        color: #666;
        font-weight: bold;
        font: bold 20px arial, verdana, helvetica, sans-serif;
    }

        .month ul {
            padding: 0;
            margin: 0;
        }

    .weekdays, .days {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
    }

        .day, .weekdays div {
            min-height: 100px;
            padding: 5px;
            box-sizing: border-box;
            border-right: 1px solid #eee;
            border-bottom: 1px solid #eee;
            display: flex;
            flex-direction: column;
        }

            .day .date {
                color: #666;
                margin-bottom: 5px;
                font-weight: bold;
            }


            .day:nth-child(7n) {
                border-right: none;
            }

        .weekdays div {
            text-align: center;
            min-height: 20px;
            padding: 10px;
            color: #666;
            background-color: #ddd;
            border-right: 1px solid #eee;
            border-bottom: 1px solid #eee;
            font-weight: bold;
            line-height: 20px;
        }


    .event {
        display: block;
        background-color: #9165e3;
        color: white;
        text-align: left;
        margin-top: 2px;
        padding: 2px;
        border-radius: 3px;
        font-size: 0.75em;
    }

    .titulo {
        color: #9165e3;
        width: 80%;
        font: bold 20px arial, verdana, helvetica, sans-serif;
    }
</style>
<div class="body-calendar">

    <div class="calendar">
        <!-- Cabeçalho do Calendário -->
        <div class="month">
            <ul>
                <div>CALENDÁRIO</div>
                <div>@DateTime.Now.ToString("MMMM yyyy")</div>
            </ul>
        </div>

        <!-- Dias da semana -->
        <div class="weekdays">
            <div>Domingo</div>
            <div>Segunda</div>
            <div>Terça</div>
            <div>Quarta</div>
            <div>Quinta</div>
            <div>Sexta</div>
            <div>Sábado</div>
        </div>

        <!-- Dias -->
        <div class="days">
            @for (int i = 0; i < diaDaSemana; i++)
            {
                <div class="day empty"></div>
            }

            @for (var dia = primeiroDia; dia <= ultimoDia; dia = dia.AddDays(1))
            {
                var eventosDoDia = eventos.Where(e => e.Inicio.Date <= dia.Date && e.Fim.Date >= dia.Date).OrderBy(e => e.Inicio);

                <div class="day">
                    <div class="date">@dia.Day</div>
                    <div class="eventos">
                        @foreach (var evento in eventosDoDia)
                        {
                            <div class="event">@evento.Inicio.ToString("HH:mm") - @evento.Titulo</div>
                        }
                    </div>
                </div>
            }
        </div>

    </div>
</div>